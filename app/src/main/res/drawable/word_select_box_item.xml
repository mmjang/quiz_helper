<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#d8d8d8" />
            <corners android:radius="3dp" />
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:right="0dp" android:left="0dp" android:bottom="0dp">
        <shape  android:shape="rectangle">
            <solid android:color="#fdfdfd" />
            <corners android:radius="3dp" />
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</layer-list>