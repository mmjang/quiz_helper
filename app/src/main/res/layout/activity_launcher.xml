<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Button
                    android:duplicateParentState="false"
                    android:id="@+id/btn_quiz_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_quiz_login"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/Divider" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:duplicateParentState="false"
                    android:id="@+id/switch_monite_clipboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/monite_clipboard"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/Divider" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:duplicateParentState="false"
                    android:id="@+id/switch_cancel_after_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/cancel_after_add"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <Switch
                    android:duplicateParentState="false"
                    android:id="@+id/left_hand_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/left_hand_mode"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/btn_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/btn_help_str"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/Divider" />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:id="@+id/btn_about_and_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/btn_about_and_support_str"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
